
<div class="container mx-8 my-4 px-4 py-4 bg-white border border-light">
  <h1 class="pb-4">Hi, Nurra </h1>

  <div class="container">
    <div class="wrapper">
      <% @pets.each do |pet| %>
        <div class="col-sm">
          <div class="card my-2"  style="width: 20rem;">
            <img src="https://pupuphooray.com/wp-content/uploads/2019/03/dog-icon.png" alt="dog icon">
            <%= pet.name %>
      </div>
    <% end %>
  </div>


  <div class="col mb-4">
    <h3>Requests</h3>

    <ol class="list-group list-group-flush">
      <% @bookings.each do |booking| %>
        <li class="list-group-item d-flex justify-content-between align-items-start">
          <div class="fw-bold"><%= booking.user.name%> Dog : <%= booking.pet.name %> - Date of booking : <%= booking.booking_date %></div>
          <div class="fw)light"><%= booking.user.email%></div>
            <%= simple_form_for(booking) do |f| %>
            <%= f.input :status, collection: ["pending", "accepted", "denied", "completed"] %>
            <%= f.submit class: "btn btn-dark btn-sm rounded-pill" %>
        </li>
        <% end %>
      <% end %>
    </ol>
  </div>
</div>
<%= raise %>

