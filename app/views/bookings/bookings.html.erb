# Creating a form for the user to fill out that will create a booking

<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Create a new booking</h3>
        <%= simple_form_for [@pet, @booking] do |f| %>
          <%= f.input :date %>
          <%= f.association :pet, prompt: "Select a pet", input_html: {data: { controller: "tom-select"}} %>
          <%= f.submit class: "btn btn-flat" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
