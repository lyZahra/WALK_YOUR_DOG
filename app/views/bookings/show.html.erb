<h1>Booking Status For <%= @pet.name %> </h1>

<%# <%= link_to "accept", edit_booking_path(@booking, status: "accepted") %>
<%# <%= link_to "accept", edit_booking_path(@booking, status: "accepted") %>

<p class='text-success'>
  This works: Booking Date
  <%= @booking.booking_date %>
</p>
<p class='text-success btn btn-secondary'>
  This works: Booking Status
  <%= @booking.status %>
</p>
<p class='text-success'>
  This works: Pet Name
  <%= @pet.name %>
</p>
<p class='text-success'>
  This works: Owner Name
  <%= @owner.name %>
</p>
<p class='text-success'>
  This works: User Name, Person booking the dog
  <%= @user.name %>
</p>
<p class='text-success'>
  This works: User Email
  <%= @booking.user.email %>
</p>
<p class='text-success'>
  This works
  <%= cl_image_tag @pet.photo.key, crop: :fill, style: "border-radius: 10px;", class: "show-image" %>
</p>
<p class='text-success'>
  This works:  Pet Description
  <%= @pet.description %>
</p>
<p>
  <% if policy(@booking).edit? %>
    <%= link_to "Edit this booking", edit_booking_path(@booking) %> |
  <% end %>
</p>


<section class="section about-section gray-bg" id="about" style="padding: 100px;">
  <div class="row align-items-center">
    <div class="col-lg-6 text-center">
        <% if @pet.photo.key.present? %>
          <%= cl_image_tag @pet.photo.key, crop: :fill, style: "border-radius: 10px;", class: "show-image" %>
        <% else  %>
          <img src="https://pupuphooray.com/wp-content/uploads/2019/03/dog-icon.png" alt="dog icon" style="border-radius: 10px;">
        <% end %>
    </div>
    <div class="col-lg-6">
      <div class="about-text go-to" style="background-color: lightgrey; padding: 30px; margin: 20px; border-radius: 10px; box-shadow: 1px 2px lightgrey;">
        <h1 class="dark-color"><%= @pet.name %></h1>
        <h2 class="theme-color lead">Breed: <%= @pet.breed.capitalize %> </h2>
        <p>"<%= @pet.description %>"</p>
        <div class="row about-list">
          <div class="col-md-6">
            <div class="media">
              <label>Owner's name:</label><br>
              <p>&nbsp <%= @owner.name %></p>
            </div>
            <div class="media">
              <label>Average rating:</label><br>
              <p>&nbsp /5</p>
            </div>
            <div class="media">
              <label>Booking Date:</label><br>
              <p>&nbsp <%= @booking.booking_date %> </p>
            </div>
            <p class="btn btn-info"><%= @booking.status.capitalize %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
