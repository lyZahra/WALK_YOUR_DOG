<section class="section about-section gray-bg" id="about">
  <div class="container">
      <div class="row align-items-center flex-row-reverse">
          <div class="col-lg-6">
              <div class="about-text go-to">
                  <h1 class="dark-color"><%= @pet.name %></h1>
                  <h2 class="theme-color lead">Breed: <%= @pet.breed.capitalize %> </h2>
                  <p><%= @pet.description %></p>
                  <div class="row about-list">
                      <div class="col-md-6">
                          <div class="media">
                              <label>Availabilty:</label>
                              <p>&nbsp<%= @pet.availability.to_s.capitalize %></p>
                          </div>
                          <div class="media">
                              <label>Location:</label>
                              <p>&nbsp ---</p>
                          </div>
                          <div class="media">
                              <label>Distance:</label>
                              <p>&nbsp ??? miles</p>
                          </div>
                      </div>
                          <div class="media">
                              <label>Owner email:</label><br>
                              <p>&nbsp<%= @pet.user.email %></p>
                          </div>
                  </div>
              </div>
          </div>
          <div class="col-lg-6">
              <div class="about-avatar">
                <img src="https://pupuphooray.com/wp-content/uploads/2019/03/dog-icon.png" alt="dog icon">
              </div>
          </div>
      </div>
      <table style="width: 100%; height: 100%;">
        <tr>
          <td style="text-align: center; vertical-align: middle;">
            <div class="">
              <h6 class="rating">/5</h6>
              <p class="m-0px font-w-600">Average rating</p>
            </div>
          </td>
        </tr>
      </table>
  </div>
</section>
