<section class="section about-section gray-bg" id="about">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-6">
        <div class="about-avatar py-3">
          <% if @pet.photo.key.present? %>
            <%= cl_image_tag @pet.photo.key, height: 300 , width: 400, crop: :fill %>
          <% else  %>
            <img src="https://pupuphooray.com/wp-content/uploads/2019/03/dog-icon.png" alt="dog icon">
          <% end %>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="about-text go-to">
          <h1 class="dark-color"><%= @pet.name %></h1>
          <h2 class="theme-color lead">Breed: <%= @pet.breed.capitalize %> </h2>
          <p><%= @pet.description %></p>
          <div class="row about-list">
            <div class="col-md-6">
              <div class="media">
                <label>Availability:</label>
                <p>&nbsp<%= @pet.availability.to_s.capitalize %></p>
              </div>
              <div class="media">
                <label>Location:</label>
                <p>&nbsp ---</p>
              </div>
              <div class="media">
                <label>Distance:</label>
                <p>&nbsp ??? miles</p>
              </div>
              <div class="media">
                <label>Owner email:</label><br>
                <p>&nbsp<%= @pet.user.email %></p>
              </div>
              <div class="media">
                <label>Average rating:</label><br>
                <p>&nbsp /5</p>
              </div>
              <a class="btn btn-flat" href="<%= new_pet_booking_path(@pet) %>">Book now</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
