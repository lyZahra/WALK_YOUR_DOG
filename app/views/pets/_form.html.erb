<div class="container py-3">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-1 shadow w-100">
        <%= simple_form_for @pet do |f| %>
          <%= f.input :name %>
          <%= f.input :breed %>
          <%= f.input :description %>
          <%= f.input :photo, as: :file %>
          <%= f.submit class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
