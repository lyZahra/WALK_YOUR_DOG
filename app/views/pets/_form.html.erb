
<div class="row">
  <div class="bg-white rounded p-1 shadow w-100">
    <%= simple_form_for @pet do |f| %>
      <%= f.input :name %>
      <%= f.input :breed %>
      <%= f.input :description %>
      <%= f.input :photo, as: :file %>
      <%= f.submit class: 'btn btn-info' %>
    <% end %>
  </div>
</div>
